{
  "name": "jxscout-vscode",
  "displayName": "jxscout-vscode",
  "description": "jxscout extension for VSCode to help security researchers analyze JS files.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:jxscoutAnalysis"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jxscout-sidebar",
          "title": "jxscout",
          "icon": "resources/jxscout.svg"
        }
      ]
    },
    "views": {
      "jxscout-sidebar": [
        {
          "type": "tree",
          "id": "jxscoutAnalysis",
          "name": "Analysis Results"
        }
      ]
    },
    "commands": [
      {
        "command": "jxscout-vscode.refreshAnalysis",
        "title": "Refresh Analysis",
        "icon": "$(refresh)",
        "when": "view == jxscoutAnalysis"
      },
      {
        "command": "jxscout-vscode.openSettings",
        "title": "Open jxscout Settings"
      },
      {
        "command": "jxscout-vscode.highlightAndJump",
        "title": "Highlight and Jump to Code",
        "when": "view == jxscoutAnalysis"
      }
    ],
    "configuration": {
      "title": "jxscout",
      "properties": {
        "jxscout.serverHost": {
          "type": "string",
          "default": "localhost",
          "description": "Hostname of the jxscout WebSocket server"
        },
        "jxscout.serverPort": {
          "type": "number",
          "default": 3333,
          "description": "Port of the jxscout WebSocket server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "uuid": "^9.0.1",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.99.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.1",
    "eslint": "^9.23.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2"
  }
}
