{
  "name": "jxscout-vscode",
  "displayName": "jxscout-vscode",
  "description": "jxscout extension for VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "enabledApiProposals": ["contribViewContainerTitle"],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jxscout-sidebar",
          "title": "jxscout",
          "icon": "resources/jxscout.svg"
        }
      ]
    },
    "views": {
      "jxscout-sidebar": [
        {
          "type": "tree",
          "id": "jxscoutAstView",
          "name": "AST Analysis",
          "icon": "symbol-structure",
          "when": "scope == file"
        },
        {
          "type": "webview",
          "id": "jxscoutPremiumView",
          "name": "AST Analysis",
          "icon": "symbol-structure",
          "when": "scope == project"
        },
        {
          "type": "tree",
          "id": "jxscoutFileView",
          "name": "File Explorer",
          "icon": "files"
        }
      ]
    },
    "commands": [
      {
        "command": "jxscout.toggleScope",
        "title": "Toggle project/file scope",
        "icon": "$(list-tree)"
      },
      {
        "command": "jxscout.navigateToMatch",
        "title": "Navigate to match",
        "icon": "$(arrow-right)"
      },
      {
        "command": "jxscout.copyValues",
        "title": "Copy values",
        "icon": "$(copy)"
      },
      {
        "command": "jxscout.toggleSortMode",
        "title": "Toggle sort mode",
        "icon": "$(sort-precedence)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "jxscout.toggleScope",
          "when": "view == jxscoutAstView",
          "group": "navigation"
        },
        {
          "command": "jxscout.toggleScope",
          "when": "view == jxscoutFileView",
          "group": "navigation"
        },
        {
          "command": "jxscout.toggleSortMode",
          "when": "view == jxscoutAstView",
          "group": "navigation"
        },
        {
          "command": "jxscout.toggleScope",
          "when": "view == jxscoutPremiumView",
          "group": "navigation"
        },
        {
          "command": "jxscout.toggleSortMode",
          "when": "view == jxscoutPremiumView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "jxscout.copyValues",
          "when": "view == jxscoutAstView && viewItem =~ /match/",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "jxscout",
      "properties": {
        "jxscout.serverHost": {
          "type": "string",
          "default": "localhost",
          "description": "Hostname where jxscout is running"
        },
        "jxscout.serverPort": {
          "type": "number",
          "default": 3333,
          "description": "Port where jxscout is running"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "dependencies": {
    "uuid": "^9.0.1",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "esbuild": "^0.25.1",
    "eslint": "^9.23.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2"
  }
}
